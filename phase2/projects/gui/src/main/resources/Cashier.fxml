<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.Integer?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="710.0" stylesheets="Style.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.toronto.csc207.restaurantsolution.gui.Cashier.CashierController">
    <SplitPane dividerPositions="0.5" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <SplitPane dividerPositions="0.5">
            <VBox>
                <HBox alignment="CENTER">
                    <Label text="Table" HBox.hgrow="ALWAYS" />
                    <JFXComboBox fx:id="tableNumber" onAction="#tableNumberChanged" HBox.hgrow="ALWAYS">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <Integer fx:value="1" />
                                    <Integer fx:value="2" />
                                    <Integer fx:value="3" />
                                    <Integer fx:value="4" />
                                </FXCollections>
                            </items>
                            <value>
                                <Integer fx:value="1" />
                            </value>
                    </JFXComboBox>
                </HBox>
                <JFXListView fx:id="orderList" VBox.vgrow="ALWAYS" />
            </VBox>
            <VBox>
                <Label styleClass="header" text="Orders" />
                <JFXListView fx:id="billableList" disable="true" VBox.vgrow="ALWAYS" />
                <HBox alignment="CENTER" spacing="10">
                    <Label text="Tip" />
                    <JFXTextField fx:id="tipField" onKeyTyped="#updateBillableList" text="0" />
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Label text="Discount" />
                    <JFXTextField fx:id="discountField" onKeyTyped="#updateBillableList" text="0" />
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
                </HBox>
            </VBox>
        </SplitPane>
        <VBox>
            <Label styleClass="header" text="Bill Preview" />
            <TextArea fx:id="billTextValue" VBox.vgrow="ALWAYS" />
         <HBox alignment="CENTER">
            <children>
                  <JFXButton buttonType="RAISED" onAction="#sendBill" style="-fx-background-color: WHITE;">Print Bill</JFXButton>
            </children>
            <VBox.margin>
               <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
         </HBox>
        </VBox>
    </SplitPane>

</AnchorPane>
