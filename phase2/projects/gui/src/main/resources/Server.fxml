<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.TreeItemPropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<AnchorPane style="-fx-background-color: #f06292;" stylesheets="Style.css"
            xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.toronto.csc207.restaurantsolution.gui.Server.ServerController">
    <SplitPane dividerPositions="0.5" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox>
            <AnchorPane>
                <Label alignment="CENTER" style="-fx-background-color: #f06292;"
                       AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">Orders
                </Label>
            </AnchorPane>
            <JFXTreeTableView fx:id="deliverableOrdersTable" showRoot="false" VBox.vgrow="ALWAYS">
                <columns>
                    <JFXTreeTableColumn text="Table">
                        <cellValueFactory>
                            <TreeItemPropertyValueFactory property="tableNumber"/>
                        </cellValueFactory>
                    </JFXTreeTableColumn>
                    <JFXTreeTableColumn text="Order Number">
                        <cellValueFactory>
                            <TreeItemPropertyValueFactory property="orderNumber"/>
                        </cellValueFactory>
                    </JFXTreeTableColumn>
                    <JFXTreeTableColumn text="Menu Item">
                        <cellValueFactory>
                            <TreeItemPropertyValueFactory property="menuItem"/>
                        </cellValueFactory>
                    </JFXTreeTableColumn>
                </columns>
                <columnResizePolicy>
                    <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </JFXTreeTableView>
            <HBox alignment="CENTER" spacing="10.0">
                <JFXButton buttonType="RAISED" onMousePressed="#confirmSelectedOrder"
                           style="-fx-background-color: #80e27e;" HBox.hgrow="ALWAYS">Confirm
                    Delivered
                </JFXButton>
                <JFXButton buttonType="RAISED" onMousePressed="#rejectSelectedOrder"
                           style="-fx-background-color: #ff6f60;" HBox.hgrow="ALWAYS">Reject
                </JFXButton>
                <VBox.margin>
                    <Insets bottom="5.0" top="5.0"/>
                </VBox.margin>
            </HBox>
        </VBox>
        <AnchorPane>
            <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <AnchorPane>
                    <Label alignment="CENTER" style="-fx-background-color: #f06292;"
                           AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">New Order
                    </Label>
                </AnchorPane>
                <SplitPane dividerPositions="0.5, 0.5" VBox.vgrow="ALWAYS">
                    <JFXListView fx:id="menuList"/>
                    <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                        <VBox>
                            <Label text="Additions"/>
                            <JFXListView fx:id="additionsList" VBox.vgrow="ALWAYS"/>
                        </VBox>
                        <VBox>
                            <Label text="Deletions"/>
                            <JFXListView fx:id="deletionsList" VBox.vgrow="ALWAYS"/>
                        </VBox>
                    </SplitPane>
                    <AnchorPane>
                        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0"
                              AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <HBox>
                                <Label text="Table Number"/>
                                <JFXComboBox fx:id="tableNumberSelection">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <Integer fx:value="1"/>
                                            <Integer fx:value="2"/>
                                            <Integer fx:value="3"/>
                                            <Integer fx:value="4"/>
                                        </FXCollections>
                                    </items>
                                    <value>
                                        <Integer fx:value="1"/>
                                    </value>
                                </JFXComboBox>
                            </HBox>
                            <TextArea fx:id="orderSummaryTextArea" editable="false"
                                      VBox.vgrow="ALWAYS">

                            </TextArea>
                            <JFXButton buttonType="RAISED" onMouseClicked="#sendNewOrder"
                                       style="-fx-background-color: WHITE;">Send Order
                                <VBox.margin>
                                    <Insets bottom="5.0" top="5.0"/>
                                </VBox.margin>
                            </JFXButton>
                        </VBox>
                    </AnchorPane>
                </SplitPane>
            </VBox>
        </AnchorPane>
    </SplitPane>
</AnchorPane>
