<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.cell.TreeItemPropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane stylesheets="Style.css"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="edu.toronto.csc207.restaurantsolution.gui.Chef.ChefController">

    <SplitPane dividerPositions="0.5" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <SplitPane dividerPositions="0.5" orientation="VERTICAL">
            <VBox>
                <AnchorPane>
                    <Label alignment="CENTER" style="-fx-background-color: #f06292;"
                           textAlignment="CENTER" AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">Incoming Orders
                    </Label>
                </AnchorPane>
                <JFXListView fx:id="incomingOrderList" VBox.vgrow="ALWAYS"/>
            </VBox>
            <VBox style="-fx-background-color: #fff;">
                <Label fx:id="itemDisplayTitle" textAlignment="CENTER"/>
                <JFXTreeTableView
                        fx:id="itemDisplayIngredientList" VBox.vgrow="ALWAYS" showRoot="false">
                    <columns>
                        <JFXTreeTableColumn text="Ingredient" prefWidth="600">
                            <cellValueFactory>
                                <TreeItemPropertyValueFactory property="ingredientName"/>
                            </cellValueFactory>
                        </JFXTreeTableColumn>
                        <JFXTreeTableColumn text="Count" resizable="false">
                            <cellValueFactory>
                                <TreeItemPropertyValueFactory property="ingredientCount"/>
                            </cellValueFactory>
                        </JFXTreeTableColumn>
                    </columns>
                </JFXTreeTableView>
                <AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <JFXButton onMousePressed="#setSelectedOrderSeen">Acknowledge Order</JFXButton>
                </AnchorPane>
            </VBox>
        </SplitPane>
        <VBox>
            <AnchorPane>
                <Label alignment="CENTER" style="-fx-background-color: #f06292;"
                       textAlignment="CENTER" AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">In Progress
                </Label>
            </AnchorPane>
            <JFXListView fx:id="inProgressOrderList" VBox.vgrow="ALWAYS"/>
        </VBox>
    </SplitPane>
</AnchorPane>
